<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/automation"
    android:gravity="center">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.7" />


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:elevation="4dp"
        card_view:cardCornerRadius="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:id="@+id/rel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/automation"
                android:id="@+id/cover"
                android:transitionName="selected team"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="AUTOMATED ROBOTIC CHALLENGE"
                android:id="@+id/txt_movie_details"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff"
                android:layout_alignBottom="@+id/cover"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover"
                android:layout_marginTop="10dp"
                android:id="@+id/theme"
                android:layout_marginStart="10dp"
                android:text="THEME:A blend of Manual Autonomous Robotic Challenge."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/size"
                android:layout_marginStart="10dp"

                android:layout_marginTop="5dp"
                android:text="TEAM SIZE:Maximum of 4 participants."
                android:layout_below="@+id/theme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"

                android:text="Contact: Deepak Singhal"
                android:layout_below="@+id/size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time1"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/contact"
                android:text="TIME:"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone"
                android:layout_marginStart="10dp"

                android:layout_marginTop="5dp"
                android:text="Phone: 9899845428"
                android:layout_below="@+id/time1"/>

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/phone"
            android:text="Email:deepak.singhal1995@gmail.com"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="www.cybersrishti.org"
                android:id="@+id/textView"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp" />

            <Button
                android:text="REGISTRATION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:id="@+id/button"
                android:layout_below="@+id/email"
                android:layout_marginTop="5dp"

                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:text="INSTRUCTIONS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_marginTop="5dp"
                android:layout_alignBaseline="@+id/button"
                android:layout_alignBottom="@+id/button"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>